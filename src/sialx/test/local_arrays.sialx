sial local_arrays
    special list_block_map
    special print_block r
    predefined int norb
    aoindex i = 1:norb
    aoindex j = 1:norb
    local a[i,j]
    local b[i,j]
    
    do i
        print i
        execute list_block_map
        do j
            print j
            allocate a[i,j]
            allocate b[i,j]
            a[i,j] = 42.0
            b[i,j] = a[i,j]
            execute print_block b[i,j]
        enddo j
    enddo i

    println "block map before deallocates:"
    execute list_block_map
    do i
        do j
            deallocate a[i,j]
            deallocate b[i,j]
        enddo j
    enddo i
    
    println "block map after deallocates:"
    execute list_block_map
    
    println "end of local_arrays"

endsial local_arrays
